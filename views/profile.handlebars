<div class="row center">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row mt-4 center">
  <div class="col-md-6">
    <h3>Create an Exercise</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="exercise-name">Exercise Name</label>
        <input class="form-input" type="text" id="exercise-name" name="exercise-name" />
      </div>
      <div class="form-group">
        <label for="exercise-desc">Description</label>
        <textarea class="form-input" id="exercise-desc" name="exercise-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>